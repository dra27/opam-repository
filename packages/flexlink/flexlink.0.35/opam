  [make "MSVC_DETECT=0" "TOOLPREF=%{compiler:target-arch}%-w64-mingw32-" {ocaml:version < "4.00.0" & compiler:cc = "cc"} "flexlink.exe"] {flexdll:version != version | ocaml:version < "4.03.0"}
  ["mv" "flexlink.install.in" "flexlink.install"] {flexdll:version != version | ocaml:version < "4.03.0"}
]
