build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-recipe-command"]
  [make]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "bap-plugin-recipe_command"]
          ["bapbundle" "remove" "recipe_command.plugin"]
         ]
