  "ocaml" {>= "4.08.0" }
  "base"
  "stdio"
  "parsexp"
  "fileutils"
  "camlzip"
  "uuidm"
  "bap-std" {= "2.4.0"}
  "bap-recipe" {= "2.4.0"}
  "bap-main" {= "2.4.0"}
]
