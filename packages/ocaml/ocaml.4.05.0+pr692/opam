opam-version: "2.0"
descr: """
configure: optimistically enable native dynlink on recent 32bit darwin hosts
"""
maintainer: "contact@ocamlpro.com"
depends: ["base-unix" "base-bigarray" "base-threads"]
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"
build: [
  ["./configure" "-prefix" prefix "-with-debug-runtime"]
  [make "world"]
  [make "world.opt"]
]
install: [make "install"]
substs: "ocaml.config"
url {
  src: "https://github.com/gasche/ocaml/archive/configure-32bit-darwin-natdynlink.tar.gz"
}
