opam-version: "2.0"
descr: """
Fix redundant configure clause for openbsd shared lib options
"""
maintainer: "contact@ocamlpro.com"
depends: ["base-unix" "base-bigarray" "base-threads"]
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"
build: [
  ["./configure" "-prefix" prefix "-with-debug-runtime"]
  [make "world"]
  [make "world.opt"]
]
install: [make "install"]
substs: "ocaml.config"
url {
  src: "https://github.com/pmundkur/ocaml/archive/pm-fix-redundant-openbsd-configure-sharedlib-opts.tar.gz"
}
