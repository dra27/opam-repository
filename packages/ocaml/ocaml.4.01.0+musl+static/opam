opam-version: "2.0"
descr: """
4.01.0 release compiled with musl-gcc -static

Requires musl-gcc to be installed (apt-get install musl-tools on Debian)
"""
maintainer: "contact@ocamlpro.com"
depends: ["base-unix" "base-bigarray" "base-threads"]
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"
build: [
  [
    "./configure"
    "-prefix"
    prefix
    "-with-debug-runtime"
    "-cc"
    "musl-gcc -Os"
    "-aspp"
    "musl-gcc -c"
    "-libs"
    "-static"
    "-no-tk"
    "-no-curses"
    "-no-graph"
    "-no-shared-libs"
  ]
  [make "world.opt"]
]
install: [make "install"]
substs: "ocaml.config"
url {
  src: "http://caml.inria.fr/pub/distrib/ocaml-4.01/ocaml-4.01.0.tar.gz"
}
available: os != "win32"
