opam-version: "2.0"
descr: """
Official 3.12.1 release
"""
maintainer: "contact@ocamlpro.com"
depends: ["base-unix" "base-bigarray" "base-threads" "compiler" "flexdll" {os = "win32" & >= "0.23"} "win32-tcl-tk" {os = "win32" & >= "8.5.0"}]
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{<$lib$/stublibs}%"
build: [
  ["./configure" "-prefix" prefix] {os != "win32"}
  ["./win.sh" "3.12.1" compiler:ocaml-win-conf prefix flexdll:lib win32-tcl-tk:lib win32-tcl-tk:version compiler:a] {os = "win32"}
  [make "world"]
  [make "world.opt"]
]
install: [
  [make "install"]
  ["mkdir" "-p" "%{<$prefix$/lib/ocaml/compiler-libs}%"]
  ["cp" "--no-preserve=mode" {os = "win32"} "-r" "typing" "parsing" "utils" "%{<$prefix$/lib/ocaml/compiler-libs/}%"]
]
substs: "ocaml.config"
url {
  src: "http://caml.inria.fr/pub/distrib/ocaml-3.12/ocaml-3.12.1.tar.gz"
}
also-install: ["flexlink" {= "0.29" & os = "win32"} "win32-tcl-tk" {< "8.6.0" & os = "win32"}]
available: os != "win32" | switch-arch != "x86_64" & "%{target-arch}%" != "x86_64" | switch-cc != "cc" & "%{cc}%" != "cc"
