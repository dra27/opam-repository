opam-version: "2.0"
descr: """
use the frame pointer to retrieve caml_last_return_address in the stack overflow handler
"""
maintainer: "contact@ocamlpro.com"
depends: ["base-unix" "base-bigarray" "base-threads"]
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"
build: [
  ["./configure" "-prefix" prefix "-with-debug-runtime"]
  [make "world"]
  [make "world.opt"]
]
install: [make "install"]
substs: "ocaml.config"
url {
  src: "https://github.com/oandrieu/ocaml/archive/stack-overflow-backtrace-fp.tar.gz"
}
