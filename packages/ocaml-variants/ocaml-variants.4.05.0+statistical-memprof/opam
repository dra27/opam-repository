homepage: "https://ocaml.org"
dev-repo: "git+https://github.com/ocaml/ocaml.git#4.05"
extra-source "alt-signal-stack.patch" {
  src: "https://github.com/dra27/ocaml/commit/4d31dbdda1509f764bf0c766df97383d39b4cf2b.patch"
